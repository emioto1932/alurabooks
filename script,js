<script>
 var swiper = new Swiper(".swiper-container", {
  slidesPerView: 1,   // Número de slides visíveis por vez
  spaceBetween: 10,   // Espaçamento entre os slides (opcional)
  loop: true,         // Habilita o loop infinito
  navigation: {
    nextEl: ".swiper-button-next",  // Seletor do botão "próximo"
    prevEl: ".swiper-button-prev",  // Seletor do botão "anterior"
  },
  pagination: {
    el: ".swiper-pagination",       // Seletor do paginador (os pontinhos)
    clickable: true,                // Habilita clique nos pontinhos
  },
});

</script>
